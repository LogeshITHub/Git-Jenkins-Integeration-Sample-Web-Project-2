@model IEnumerable<SimpleWebApp.Models.FundModel>

@{
    ViewData["Title"] = "Fund List";
}
<div class="fund-list">
    <h2>Available Funds</h2>
    <div class="fund-grid">
        @foreach (var fund in Model)
        {
            <div class="fund-card">
                <h3>@fund.Name</h3>
                <p>Category: @fund.Category</p>
                <p>NAV: $@fund.NAV.ToString("0.00")</p>
                <p>@fund.Description</p>
                <a asp-action="Details" asp-route-id="@fund.Id" class="btn">View Details</a>
            </div>
        }
    </div>
</div>  